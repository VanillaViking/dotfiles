set $tp 'DELL0B64:00 06CB:CE81 Touchpad'
set $mouse 13
exec_always xinput set-prop $mouse 'libinput Accel Speed' -0.75
exec_always xinput set-prop $tp 'libinput Tapping Enabled' 1
exec_always xinput set-prop $tp 'libinput Natural Scrolling Enabled' 1 
exec_always xinput set-prop $tp 332 0
exec_always xinput set-prop $tp 321 25
exec_always xinput set-prop $tp 367 0
exec_always xinput set-prop $tp 368 0
exec_always xinput set-prop 'TPPS/2 IBM TrackPoint' 'libinput Accel Speed' 0
exec_always "nm-applet"
exec_always xset r rate 200 30 
