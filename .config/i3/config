bindsym $mod+Mod1+space exec --nostartup-id i3-msg 'workspace 12; exec /usr/bin/obsidian; workspace 2; workspace notes; exec /usr/bin/neovide ~/Documents/Obsidian\ Vault; workspace 2; exec /usr/bin/neovide /usr/bin/firefox'

# Volume
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume 0 +1% && pkill -RTMIN+10 i3blocks
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -1% && pkill -RTMIN+10 i3blocks
bindsym XF86AudioMute exec --no-startup-id mpc toggle
bindsym XF86AudioNext exec --no-startup-id mpc next
bindsym XF86AudioPrev exec --no-startup-id mpc prev

# Brightness
bindsym XF86MonBrightnessUp exec "light -A 10"
